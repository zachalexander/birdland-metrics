{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/index.html",
          "/*.css",
          "/*.js",
          "/favicon.ico",
          "/favicon-16x16.png",
          "/favicon-32x32.png",
          "/apple-touch-icon.png",
          "/logo.png"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/**/*.+(png|jpg|jpeg|svg|webp|avif|gif)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "contentful-api",
      "urls": [
        "https://cdn.contentful.com/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 50,
        "maxAge": "1h",
        "timeout": "5s"
      }
    },
    {
      "name": "contentful-images",
      "urls": [
        "https://images.ctfassets.net/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "30d"
      }
    },
    {
      "name": "s3-data",
      "urls": [
        "https://mlb-elo-ratings-output.s3.amazonaws.com/**",
        "https://mlb-predictions-2026.s3.amazonaws.com/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 20,
        "maxAge": "6h",
        "timeout": "5s"
      }
    }
  ]
}
